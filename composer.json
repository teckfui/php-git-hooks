{
  "name": "bruli/php-git-hooks",
  "description": "Git hooks for PHP projects.",
  "license": "MIT",
  "keywords": [
    "git",
    "hook",
    "quality"
  ],
  "authors": [
    {
      "name": "Pablo Braulio",
      "email": "brulics@gmail.com"
    }
  ],
  "type": "library",
  "minimum-stability": "stable",
  "autoload": {
    "psr-0": {
      "PhpGitHooks": "src/"
    }
  },
  "require": {
    "php": ">=5.6",
    "friendsofphp/php-cs-fixer": "^1.11",
    "mockery/mockery": "~0.9",
    "phpunit/phpunit-mock-objects": "~2.0",
    "phpunit/php-code-coverage": "~2",
    "mybuilder/phpunit-accelerator": "^1.1",
    "squizlabs/php_codesniffer": "~3",
    "phpmd/phpmd": "~2.2",
    "symfony/dependency-injection": "~2.7|~3.0",
    "symfony/config": "~2.7|~3.0",
    "symfony/yaml": "~2.7|~3.0",
    "fiunchinho/phpunit-randomizer": "~2.0",
    "seld/jsonlint": "1.3.*",
    "bruli/ignore-files": "~1.0",
    "beberlei/assert": "^2.5",
    "bruli/php-value-objects": "~0.1",
    "bruli/event-bus-bundle": "~0.2"
  },
  "require-dev": {
    "composer/composer": "^1.0@dev",
    "fzaninotto/faker": "^1.6"
  },
  "config": {
    "bin-dir": "bin/"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.x-dev"
    }
  },
  "scripts": {
    "post-install-cmd": "PhpGitHooks\\Infrastructure\\Composer\\ConfiguratorScript::buildConfig",
    "post-update-cmd": "PhpGitHooks\\Infrastructure\\Composer\\ConfiguratorScript::buildConfig"
  }
}
